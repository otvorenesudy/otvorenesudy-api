@import 'mixins';
@import 'animations';
@import 'variables';

html, body {
  height: 100%;
  font-family: 'Open Sans', sans-serif !important;
}

.jumbotron {
  @include linear-gradient(60deg, darken($base-color, 30%), lighten($base-color, 10%));

  height: 100%;
  min-height: 800px;
  padding: 0px;
  position: relative;
}

.pattern {
  height: 100%;
  background-image: url(<%= asset_path 'cube.png' %>);
  background-attachment: scroll;
  background-color: transparent;
  background-position: center center;
  background-repeat: repeat;
  padding-top: 20px;
}

.logo {
  img {
    @include transition(all 0.8s ease);

    height: 50px;
    opacity: 0.3;
    filter: alpha(opacity=30); /* For IE8 and earlier */

    &:hover {
      @include transition(all 0.8s ease);

      opacity: 1.0;
      filter: alpha(opacity=100); /* For IE8 and earlier */
    }
  }
}

.headline {
  margin-top: 15%;
  margin-left: 10%;
  margin-right: 10%;
  text-align: center;
  height: 100%;

  .title {
    @include animation(fade-in-down, 0.8s, 0s);

    color: white !important;
    font-weight: 700;
    letter-spacing: -1px;
  }

  .description {
    @include animation(fade-in-down, 1.1s, 0s);

    color: #979797;
    font-weight: 300;
    margin-bottom: 50px;
  }

  .sign-up-form {
    @include animation(fade-in-up, 1.1s, 0s);
  }
}

.sign-up-form {
  input {
    border-radius: 30px;
    border-color: lighten($base-color, 5%);
    font-weight: 300;

    &.active, &:focus, &:active {
      background-image: none;
      outline: 0;
      -webkit-box-shadow: none;
      box-shadow: none;
      border-color: lighten($base-color, 5%);
    }
  }

  .btn-sign-up {
    border-color: lighten($base-color, 10%);
    background-color: lighten($base-color, 10%);
    border-radius: 30px;
    padding: 10px 20px;
    color: white;

    &:active {
      border-color: lighten($base-color, 5%);
      background-color: lighten($base-color, 5%);
    }
  }
}


.btn-see-more {
  @include animation(fade-in-up, 3s, 0s);
  @include transition(all 0.5s ease);

  position: absolute;
  bottom: 50px;
  left: 50%;
  font-size: 2rem;
  color: $gray-light;
  text-align: center;
  width: 140px;
  margin-left: -70px;
  padding: 0px;

  &:hover, &.active, &:focus {
    color: $gray-lighter;
    text-decoration: none;
  }
}

